<div class="profile-challenge-box">
    <div class="container profile-challenge-box-name">
        <h3>{{this.name}}</h3>

        <div class="profile-challenge-icons">
            <a href="/priv/user/personalChallenge/{{this._id}}">info</a>
            <a href="/priv/editPersonalChallenge/{{id}}"><i class="far fa-edit"></i></a>
            <a href="/priv/deletePersonalChallenge/{{id}}"><i class="far fa-trash-alt"></i></a>
        </div>
    </div>

    <div class="container profile-challenge-box-buttons">
        <form action="/priv/achievedPersonalChallenge/{{this._id}}" method="POST">
            <button class="challenge-button">Achieved</button>
        </form>

        <form action="/priv/failedPersonalChallenge/{{this._id}}" method="POST">
            <button class="challenge-button red-button">Failed</button>
        </form>
    </div>
</div>