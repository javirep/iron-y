<div class="profile-challenge-box">
    <div class="container profile-challenge-box-name">
        <h3>{{this.name}}</h3>

        <div class="profile-challenge-icons">
            <a href="/priv/socialChallengeDetail/{{this.id}}"> info</a>
            <form action="/priv/socialChallenge/delete/{{this.id}}" method="POST">
                <button><i class="far fa-trash-alt"></i></button>
            </form>
        </div>
    </div>

    <div class="container profile-challenge-box-buttons">
        <form action="" method="POST">
            <button class="challenge-button">Achieved</button>
        </form>

        <form action="" method="POST">
            <button class="challenge-button red-button">Failed</button>
        </form>
    </div>
</div>