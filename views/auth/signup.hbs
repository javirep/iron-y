<section class="container cover">

    <h2 class="back"><i class="fas fa-fast-backward"></i> back</h2>

    <img class="logo" src="/images/Logo.png" alt="logo">
    

    <form class="form-auth" action="/auth/signup" method="POST">

        <input type="text" name="username" placeholder="User name">

        <input type="password" name="password" placeholder="Password">

        <input type="password" name="repeat-password" placeholder="Repeat Password">

        <button class="btn" type="submit">Sign Up</button>

    </form>

    <h3> Already have an account? <a href="/auth/login">Log in</a> </h3>

    {{#if errorMessage}}
    <div>{{ errorMessage }}</div>
    {{/if}}

    {{!-- <a href="/"><i class="fas fa-arrow-left"></i> Go back</a> --}}

</section>