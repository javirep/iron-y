<h1>Hi: {{user.username}}</h1>

<div>
    <img src="{{user.imgPath}}" alt="">

    <h2>{{user.motivSentence}}</h2>

</div>

<section>
    <i class="fas fa-heart"></i>
    <div>{{user.hp}}</div>
    <p>Exp</p>
    <div>{{user.exp}}</div>
</section>

<section>
    <h2>Personal Challenges</h2>
    <div>
        {{#each user.personalChallenges}}
        <p>{{>personalChallenge}}</p>
        {{/each}}
    </div>

    <a href="/priv/addPersonalChallenge"><i class="fas fa-plus"></i> Add a personal Challenge</a>
</section>



<section>
    <h2>Social Challenges</h2>
    <div>
        {{#each user.socialChallenges}}
            {{>profileSocialChallenges}}
        {{/each}}
    </div>

    <a href="/priv/socialChallenges"><i class="fas fa-plus"></i> See more social Challenges</a>
</section>