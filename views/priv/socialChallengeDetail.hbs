<section class="challenge-detail scroll">
    <h1>Social Challenge</h1>

    <div>
        <header class="">
            <img src="{{data.image}}" alt="">
            <div>
                <h2>{{data.name}}</h2>
                <i class="fas fa-user"> {{usersWithChallenge.length}} participants</i>
            </div>
        </header>

        <main>
            <p class="paragraf">{{data.description}}</p>
        </main>
    </div>

    <form action="/priv/addSocialChallenge/{{id}}" method="POST">
        <button class="yellow-button">Join</button>
    </form>
</section>

{{>toolbar}}